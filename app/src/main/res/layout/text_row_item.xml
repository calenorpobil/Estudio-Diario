<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">


    <Button
        android:id="@+id/btEmoji"
        android:layout_width="46dp"
        android:layout_height="43dp"
        android:background="@drawable/round_button"
        android:contentDescription="@string/imagen"
        android:text="@string/btMenos"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:text="@string/titulo"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvCuenta"
        app:layout_constraintStart_toEndOf="@id/btEmoji"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="14dp"
        android:maxLines="2"
        android:text="@string/desc_estudio"
        android:textAlignment="textStart"
        android:textColor="#2C2C2C"
        app:layout_constraintEnd_toEndOf="@+id/tvTitulo"
        app:layout_constraintEnd_toStartOf="@+id/tvCuenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvTitulo"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />


    <TextView
        android:id="@+id/tvCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16sp"
        android:text="@string/numOcurrencias"
        app:layout_constraintBottom_toBottomOf="@id/tvDescripcion"
        app:layout_constraintEnd_toStartOf="@+id/btMas"
        app:layout_constraintTop_toTopOf="@id/btEmoji" />

    <Button
        android:id="@+id/btMas"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:text="@string/MasBoton"
        android:textSize="20sp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btEmoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>